<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Blog</title>
    <!-- Bootstrap core CSS -->
    <!-- Bootstrap core CSS-->
    <link href="@Url.Content("~/Content/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
    <!-- Custom fonts for this template-->
    <link href="@Url.Content("~/Content/vendor/fontawesome-free/css/all.min.css")" rel="stylesheet" type="text/css">
    <!-- Page level plugin CSS-->
    <link href="@Url.Content("~/Content/vendor/datatables/dataTables.bootstrap4.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/css/blog-home.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    

</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">MVC Blog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            Anasayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Hakkimda", "Home")">Hakkımda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Iletisim", "Home")">İletişim</a>
                    </li>
                    @if (Session["Id"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Index/@Session["Id"]">@Session["KullaniciAdi"].ToString()</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Logout/">Çıkış</a>
                        </li>
                    }

                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Uye/Login/">Giriş</a>
                        </li>
                    }

                    @if (Convert.ToInt32(Session["YetkiId"]) == 1)
                    {
                        <li class="nav-item">
                            <a class="nav-link" target="_blank" href="/Admin/Index/">Admin Paneli</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <!-- Blog Post -->
                @RenderBody()
               
            </div>
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Search Widget -->
                <div class="card my-4">
                  @Html.Partial("BlogAramaPartial")
                </div>
                <!-- Categories Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }
                </div>
                <!-- Comments Widget -->
                <div class="card my-4">
                    @{ 
                        Html.RenderAction("Son5Yorum", "Home");
                    }
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark" style="position:relative;bottom:0; width:100%">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; MyBLOG 2018</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
    <script src="@Url.Content("~/Content/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <!-- Core plugin JavaScript-->
    <script src="@Url.Content("~/Content/vendor/jquery-easing/jquery.easing.min.js")"></script>
    <!-- Page level plugin JavaScript-->
    <script src="@Url.Content("~/Content/vendor/chart.js/Chart.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/datatables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Content/vendor/datatables/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.lang.tr.js")"></script>
</body>
</html>
