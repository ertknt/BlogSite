@model IEnumerable<MVCBlog.Models.Kategori>

@{
    Layout = null;
}

<h5 class="card-header">Kategoriler</h5>
<div class="card-body">
    <div class="row">
        <div class="col-lg-6">
            <ul class="list-unstyled mb-0">
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/Home/KategoriMakale/@item.Id">@item.Isim (@item.Makale.Count())</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
