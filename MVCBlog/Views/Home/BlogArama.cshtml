@model IEnumerable<MVCBlog.Models.Makale>

@{
    ViewBag.Title = "BlogArama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Aradığınız Makaleler</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.Isim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori.Isim)
        </td>

        <td>
            <a href="/Home/MakaleDetay/@item.Id"> @Html.DisplayFor(modelItem => item.Baslik)</a>
        </td>

        <td>
            <img class="d-flex mr-3 rounded-circle" width="75" src="@item.Foto" alt="@item.Baslik" />
        </td>

    </tr>
}

</table>
